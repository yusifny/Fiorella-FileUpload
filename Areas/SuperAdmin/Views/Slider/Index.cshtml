@model IEnumerable<Slider>
@{
    ViewBag.Title = "Sliders";
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Slider </h4>
                <a class="btn btn-success my-3" asp-controller="Slider" asp-action="Create">
                    Create
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Count </th>
                            <th>Image</th>
                            <th>Settings</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="~/img/@item.ImageUrl"/>
                                </td>
                                <td>
                                    <a class="btn btn-facebook mb-2" asp-controller="Slider" asp-action="Index" asp-route-id="@item.Id">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a class="btn btn-primary mb-2" asp-controller="Slider" asp-action="Index" asp-route-id="@item.Id">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a class="btn btn-danger mb-2" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
